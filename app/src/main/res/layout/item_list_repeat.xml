<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_detail_item_list_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alarm_detail_list_item_layout_min_height"
    android:background="@drawable/item_list_repeat_bg"
    android:paddingEnd="@dimen/alarm_padding_horizontal_common"
    android:paddingStart="@dimen/alarm_padding_horizontal_common">

    <CheckBox
        android:id="@+id/alarm_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:button="@drawable/ic_cb" />

    <TextView
        android:id="@+id/alarm_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/alarm_check_box"
        android:text="@string/alarm_repeat_every_day"
        android:ellipsize="end"
        android:textSize="@dimen/alarm_detail_list_item_text_size" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line" />

</RelativeLayout>