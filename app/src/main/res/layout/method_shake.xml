<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_shake"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/method_dialog_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/alarm_method_alarm_padding_top"
    android:visibility="gone">

    <ImageView
        android:layout_width="@dimen/alarm_method_shake_icon_size"
        android:layout_height="@dimen/alarm_method_shake_icon_size"
        android:background="@drawable/ic_smart_phone"
        android:backgroundTint="@color/method_dialog_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/alarm_method_shake_margin_bottom"
        android:layout_marginTop="@dimen/alarm_method_shake_margin_top"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_of_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/method_dialog_text_color"
            android:textSize="@dimen/alarm_method_shake_text_size" />

    </LinearLayout>
</LinearLayout>