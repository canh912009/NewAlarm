<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radio_group_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_list_repeat_bg"
    android:minHeight="@dimen/alarm_detail_list_item_layout_min_height"
    android:paddingEnd="@dimen/alarm_padding_horizontal_common"
    android:paddingStart="@dimen/alarm_padding_horizontal_common">

    <RadioButton
        android:id="@+id/alarm_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:theme="@style/ThemeRadioButton" />

    <TextView
        android:id="@+id/alarm_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/alarm_radio_button"
        android:ellipsize="end"
        android:textSize="@dimen/alarm_detail_list_item_text_size" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line" />

</RelativeLayout>