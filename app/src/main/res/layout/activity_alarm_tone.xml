<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.tone.AlarmToneActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_alarm_tone"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/colorTextTitle"
        app:tabBackground="@color/colorPrimaryDark"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorTextTitle"
        app:tabTextAppearance="@style/TabTextAppearanceStyle" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tab_alarm_tone">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_alarm_tone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>