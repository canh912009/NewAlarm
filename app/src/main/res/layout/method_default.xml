<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/method_dialog_content"
    android:gravity="center"
    android:visibility="gone"
    android:paddingBottom="@dimen/default_bottom"
    android:orientation="horizontal"
    android:paddingTop="@dimen/alarm_method_alarm_padding_top">

    <TextView
        android:id="@+id/dismiss"
        android:layout_marginStart="@dimen/default_text_margin"
        android:layout_alignParentStart="true"
        style="@style/DefaultMethodText"
        android:text="@string/dismiss"/>

    <TextView
        android:id="@+id/snooze"
        style="@style/DefaultMethodText"
        android:layout_marginEnd="@dimen/default_text_margin"
        android:layout_alignParentEnd="true"
        android:text="@string/snooze"/>

</RelativeLayout>